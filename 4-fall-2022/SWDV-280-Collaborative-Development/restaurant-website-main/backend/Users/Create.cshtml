@page
@model TestBackEnd.Pages.Users.CreateModel
@{
}

<br />
<h2>New User</h2>

@if (Model.errorMessage.Length > 0) {
    <div>
        <strong>@Model.errorMessage</strong>
    </div>
}
@if (Model.successMessage.Length > 0) {
    <div>
        <strong>@Model.successMessage</strong>
    </div>
}

<form method="POST">
    <table>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
        <tr>
            <td><input type="text" name="fname" value="@Model.userInfo.firstName"/></td>
            <td><input type="text" name="lname" value="@Model.userInfo.lastName"/></td>
        </tr>
        <tr>
            <td><button type="submit">Submit</button></td>
            <td><button role="button" href="/">Cancel</button></td>
        </tr>
    </table>
</form>